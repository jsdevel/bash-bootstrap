#!/bin/bash

al=~/.bash_aliases

if [ -f $al ] && [ ! -h ~/;then
  mv $al ${al}.backup;
fi

if [ ! -h $al ];then
  ln -s "`rPath .bash_aliases`" $al
fi

if [ -z "`grep -o 'bash_aliases' ~/.bashrc`" ];then
modifiedHeaderTo '#' ~/.bashrc
  cat >> ~/.bashrc <<~

if [ -f $al ];then
  . $al > /dev/null;
fi
~
fi
