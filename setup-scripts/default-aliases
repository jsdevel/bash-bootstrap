#!/bin/bash

if [ -f ~/.bash_aliases ];then
  mv ~/.bash_aliases ~/.bash_aliases.backup;
fi

if [ -z "`grep -o 'bash_aliases' ~/.bashrc`" ];then
modifiedHeaderTo '#' ~/.bashrc
  cat >> ~/.bashrc <<~
curl -s https://raw.github.com/jsdevel/bash-bootstrap/master/bootstrap.bash \
| bash > /dev/null

if [ -f ~/.bash_aliases ];then
  . ~/.bash_aliases > /dev/null;
fi
~
fi

addedHeaderTo '#' ~/.bash_aliases
cat > ~/.bash_aliases <<!
#!/bin/bash
alias edivimrc='vim ~/.vimrc'
alias edibashal='vim ~/.bash_aliases;. ~/.bash_aliases'
alias edibashrc='vim ~/.bashrc;. ~/.bashrc'
alias l="ls -Al"

function cjobs()
{
   ps -e | less;
}

sshadd(){
  ssh-add $HOME/.ssh/$1
}

if [ ~/.bash_aliases_custom ];then
  . ~/.bash_aliases_custom;
fi
!
